<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
  <div class ="field"><label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class ="field"><label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class ="action">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
<a href="/books/#show">Show</a>
