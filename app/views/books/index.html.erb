<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<section class ="index">
  <% if @book.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2>New Book</h2>
  <%= form_for(@book) do |f| %>
    <div class ="field"><label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class ="field"><label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div class ="action">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</section>
